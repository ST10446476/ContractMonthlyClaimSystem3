<Window x:Class="ContractMonthlyClaimSystem.Views.CoordinatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Portal - Claim Verification" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#9C27B0" Padding="20" CornerRadius="5" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Programme Coordinator Portal" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Review and approve lecturer claims" FontSize="14" Foreground="White" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Filter by Status:" FontSize="14" FontWeight="SemiBold" 
                          VerticalAlignment="Center" Margin="0,0,10,0"/>

                <RadioButton Content="Pending" IsChecked="True" GroupName="StatusFilter"
                            FontSize="14" Margin="10,0"
                            Checked="RadioButton_Checked" Tag="Pending"/>
                <RadioButton Content="Approved" GroupName="StatusFilter"
                            FontSize="14" Margin="10,0"
                            Checked="RadioButton_Checked" Tag="Approved"/>
                <RadioButton Content="Rejected" GroupName="StatusFilter"
                            FontSize="14" Margin="10,0"
                            Checked="RadioButton_Checked" Tag="Rejected"/>
                <RadioButton Content="All" GroupName="StatusFilter"
                            FontSize="14" Margin="10,0"
                            Checked="RadioButton_Checked" Tag="All"/>

                <Button Content="🔄 Refresh" Command="{Binding RefreshCommand}" 
                       Background="#2196F3" Foreground="White" Margin="30,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Claims Grid -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Claims List -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Claims List" FontSize="18" FontWeight="Bold" 
                              Margin="15" Background="White"/>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding PendingClaims}" 
                             SelectedItem="{Binding SelectedClaim}"
                             AutoGenerateColumns="False" IsReadOnly="True"
                             AlternatingRowBackground="#F5F5F5"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column" Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ClaimId}" Width="60"/>
                            <DataGridTextColumn Header="Lecturer" Binding="{Binding Lecturer.FullName}" Width="150"/>
                            <DataGridTextColumn Header="Department" Binding="{Binding Lecturer.Department}" Width="120"/>
                            <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="70"/>
                            <DataGridTextColumn Header="Rate" 
                                              Binding="{Binding HourlyRate, StringFormat='R {0:N2}'}" Width="90"/>
                            <DataGridTextColumn Header="Amount" 
                                              Binding="{Binding FinalPayment, StringFormat='R {0:N2}'}" Width="110"/>
                            <DataGridTextColumn Header="Submitted" 
                                              Binding="{Binding SubmissionDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="Approved">
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="Rejected">
                                                <Setter Property="Foreground" Value="#F44336"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="Pending">
                                                <Setter Property="Foreground" Value="#FF9800"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Claim Details Panel -->
            <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" 
                   CornerRadius="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="Claim Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                    <StackPanel DataContext="{Binding SelectedClaim}">
                        <TextBlock Text="Lecturer Information" FontSize="14" FontWeight="SemiBold" 
                                  Margin="0,0,0,10" Foreground="#9C27B0"/>

                        <TextBlock Text="{Binding Lecturer.FullName, StringFormat='Name: {0}'}" 
                                  FontSize="13" Margin="0,3"/>
                        <TextBlock Text="{Binding Lecturer.Email, StringFormat='Email: {0}'}" 
                                  FontSize="13" Margin="0,3"/>
                        <TextBlock Text="{Binding Lecturer.Department, StringFormat='Department: {0}'}" 
                                  FontSize="13" Margin="0,3"/>

                        <Separator Margin="0,15"/>

                        <TextBlock Text="Claim Information" FontSize="14" FontWeight="SemiBold" 
                                  Margin="0,10,0,10" Foreground="#9C27B0"/>

                        <TextBlock Text="{Binding ClaimId, StringFormat='Claim ID: {0}'}" 
                                  FontSize="13" Margin="0,3"/>
                        <TextBlock Text="{Binding HoursWorked, StringFormat='Hours Worked: {0}'}" 
                                  FontSize="13" Margin="0,3"/>
                        <TextBlock Text="{Binding HourlyRate, StringFormat='Hourly Rate: R {0:N2}'}" 
                                  FontSize="13" Margin="0,3"/>

                        <Border Background="#E3F2FD" Padding="10" Margin="0,10" CornerRadius="5">
                            <TextBlock Text="{Binding FinalPayment, StringFormat='Total Payment: R {0:N2}'}" 
                                      FontSize="16" FontWeight="Bold" Foreground="#1976D2"/>
                        </Border>

                        <TextBlock Text="{Binding SubmissionDate, StringFormat='Submitted: {0:dd MMMM yyyy}'}" 
                                  FontSize="13" Margin="0,3"/>
                        <TextBlock Text="{Binding Status, StringFormat='Status: {0}'}" 
                                  FontSize="13" Margin="0,3" FontWeight="SemiBold"/>

                        <TextBlock Text="Notes:" FontSize="13" FontWeight="SemiBold" Margin="0,15,0,5"/>
                        <TextBox Text="{Binding Notes}" IsReadOnly="True" 
                                TextWrapping="Wrap" Height="80" 
                                VerticalScrollBarVisibility="Auto" Background="#FAFAFA"/>
                    </StackPanel>

                    <Separator Margin="0,20"/>

                    <TextBlock Text="Review Notes:" FontSize="13" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <TextBox Text="{Binding ReviewNotes, UpdateSourceTrigger=PropertyChanged}" 
                            Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"/>

                    <StackPanel Margin="0,20,0,0">
                        <Button Content="✓ Approve Claim" Command="{Binding ApproveClaimCommand}" 
                               Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                        <Button Content="✗ Reject Claim" Command="{Binding RejectClaimCommand}" 
                               Background="#F44336" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F5F5F5" Padding="10" CornerRadius="5" Margin="0,20,0,0">
            <TextBlock>
                <Run Text="Total Claims: "/>
                <Run Text="{Binding PendingClaims.Count}" FontWeight="Bold"/>
                <Run Text=" | Selected: "/>
                <Run Text="{Binding SelectedClaim.ClaimId, FallbackValue='None'}" FontWeight="Bold"/>
            </TextBlock>
        </Border>
    </Grid>
</Window>

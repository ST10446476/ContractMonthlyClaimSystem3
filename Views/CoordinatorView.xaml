<Window x:Class="ContractMonthlyClaimSystem.Views.CoordinatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coordinator Portal" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <!-- Filter RadioButtons -->
        <TextBlock Text="Filter by Status:" FontWeight="Bold" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal">
            <RadioButton Content="Pending" GroupName="StatusFilter" Tag="Pending"
                         Checked="RadioButton_Checked" Margin="5"/>
            <RadioButton Content="Approved" GroupName="StatusFilter" Tag="Approved"
                         Checked="RadioButton_Checked" Margin="5"/>
            <RadioButton Content="Rejected" GroupName="StatusFilter" Tag="Rejected"
                         Checked="RadioButton_Checked" Margin="5"/>
            <RadioButton Content="All" GroupName="StatusFilter" Tag="All"
                         Checked="RadioButton_Checked" Margin="5"/>
        </StackPanel>

        <!-- Claims DataGrid -->
        <DataGrid x:Name="ClaimsDataGrid" AutoGenerateColumns="False" Height="400" Margin="0,20,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ClaimId}" Width="50"/>
                <DataGridTextColumn Header="Lecturer" Binding="{Binding Lecturer}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>

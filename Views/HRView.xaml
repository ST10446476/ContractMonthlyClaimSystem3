<Window x:Class="ContractMonthlyClaimSystem.Views.HRView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:viewmodels="clr-namespace:ContractMonthlyClaimSystem.ViewModels" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        Title="HR Portal - Claims Management Reporting" Height="800" Width="1300"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF5722" Padding="20" CornerRadius="5" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="HR Portal" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Manage claims, generate reports, and maintain lecturer records" 
                          FontSize="14" Foreground="White" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1">

            <!-- Approved Claims Tab -->
            <TabItem Header="Approved Claims" FontSize="14" FontWeight="SemiBold">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Date Filter -->
                    <Border Grid.Row="0" Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="From:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker SelectedDate="{Binding StartDate}" Width="150" FontSize="13"/>

                            <TextBlock Text="To:" FontSize="14" VerticalAlignment="Center" Margin="20,0,10,0"/>
                            <DatePicker SelectedDate="{Binding EndDate}" Width="150" FontSize="13"/>

                            <Button Content="🔄 Refresh" Command="{Binding RefreshCommand}" 
                                   Background="#2196F3" Foreground="White" Margin="20,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Claims DataGrid -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding ApprovedClaims}" 
                             SelectedItem="{Binding SelectedClaim}"
                             AutoGenerateColumns="False" IsReadOnly="True"
                             AlternatingRowBackground="#F5F5F5"
                             GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}" Width="80"/>
                            <DataGridTextColumn Header="Lecturer" Binding="{Binding Lecturer.FullName}" Width="150"/>
                            <DataGridTextColumn Header="Department" Binding="{Binding Lecturer.Department}" Width="140"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Lecturer.Email}" Width="200"/>
                            <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="80"/>
                            <DataGridTextColumn Header="Rate" 
                                              Binding="{Binding HourlyRate, StringFormat='R {0:N2}'}" Width="100"/>
                            <DataGridTextColumn Header="Amount" 
                                              Binding="{Binding FinalPayment, StringFormat='R {0:N2}'}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Submitted" 
                                              Binding="{Binding SubmissionDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Approved" 
                                              Binding="{Binding ApprovalDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Action Buttons -->
                    <Border Grid.Row="2" Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,15,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="📄 Generate Invoice" Command="{Binding GenerateInvoiceCommand}" 
                                   Background="#4CAF50" Foreground="White"/>
                            <Button Content="📊 Generate Report" Command="{Binding GenerateReportCommand}" 
                                   Background="#2196F3" Foreground="White"/>
                            <Button Content="📑 Export to Excel" Command="{Binding ExportToExcelCommand}" 
                                   Background="#FF9800" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Lecturer Management Tab -->
            <TabItem Header="Lecturer Management" FontSize="14" FontWeight="SemiBold">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Lecturers List -->
                        <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="All Lecturers" FontSize="18" 
                                          FontWeight="Bold" Margin="15" Background="White"/>

                                <DataGrid Grid.Row="1" ItemsSource="{Binding Lecturers}" 
                                         SelectedItem="{Binding SelectedLecturer}"
                                         AutoGenerateColumns="False" IsReadOnly="True"
                                         AlternatingRowBackground="#F5F5F5"
                                         GridLinesVisibility="Horizontal" Margin="10">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding LecturerId}" Width="60"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="150"/>
                                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                                        <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="120"/>
                                        <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="140"/>
                                        <DataGridTextColumn Header="Default Rate" 
                                                          Binding="{Binding DefaultHourlyRate, StringFormat='R {0:N2}'}" Width="110"/>
                                        <DataGridTextColumn Header="Join Date" 
                                                          Binding="{Binding DateJoined, StringFormat=dd/MM/yyyy}" Width="100"/>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="70"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>

                        <!-- Lecturer Details/Edit Panel -->
                        <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" 
                               CornerRadius="5" Padding="15">
                            <StackPanel DataContext="{Binding SelectedLecturer}">
                                <TextBlock Text="Lecturer Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                                <TextBlock Text="First Name:" FontSize="13" FontWeight="SemiBold" Margin="0,5,0,3"/>
                                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" FontSize="13" Padding="5"/>

                                <TextBlock Text="Last Name:" FontSize="13" FontWeight="SemiBold" Margin="0,10,0,3"/>
                                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" FontSize="13" Padding="5"/>

                                <TextBlock Text="Email:" FontSize="13" FontWeight="SemiBold" Margin="0,10,0,3"/>
                                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" FontSize="13" Padding="5"/>

                                <TextBlock Text="Phone:" FontSize="13" FontWeight="SemiBold" Margin="0,10,0,3"/>
                                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" FontSize="13" Padding="5"/>

                                <TextBlock Text="Department:" FontSize="13" FontWeight="SemiBold" Margin="0,10,0,3"/>
                                <TextBox Text="{Binding Department, UpdateSourceTrigger=PropertyChanged}" FontSize="13" Padding="5"/>

                                <TextBlock Text="Default Hourly Rate:" FontSize="13" FontWeight="SemiBold" Margin="0,10,0,3"/>
                                <TextBox Text="{Binding DefaultHourlyRate, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" 
                                        FontSize="13" Padding="5"/>

                                <CheckBox IsChecked="{Binding IsActive}" Content="Active" 
                                         FontSize="13" Margin="0,15,0,0"/>

                                <Button Content="💾 Update Lecturer" 
                                       Command="{Binding DataContext.UpdateLecturerCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                       Background="#4CAF50" Foreground="White" Margin="0,20,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Lecturer Actions -->
                    <Border Grid.Row="1" Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,15,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="➕ Add New Lecturer" Command="{Binding AddLecturerCommand}" 
                                   Background="#2196F3" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Reports Tab -->
            <TabItem Header="Reports Analytics" FontSize="14" FontWeight="SemiBold">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="System Statistics" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                        <!-- Summary Cards -->
                        <UniformGrid Columns="4" Rows="1" Margin="0,0,0,30">
                            <Border Background="#4CAF50" Margin="5" Padding="20" CornerRadius="10">
                                <StackPanel>
                                    <TextBlock Text="Total Claims" Foreground="White" FontSize="14"/>
                                    <TextBlock Text="{Binding ApprovedClaims.Count}" Foreground="White" 
                                              FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#2196F3" Margin="5" Padding="20" CornerRadius="10">
                                <StackPanel>
                                    <TextBlock Text="Active Lecturers" Foreground="White" FontSize="14"/>
                                    <TextBlock Text="{Binding Lecturers.Count}" Foreground="White" 
                                              FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#FF9800" Margin="5" Padding="20" CornerRadius="10">
                                <StackPanel>
                                    <TextBlock Text="This Month" Foreground="White" FontSize="14"/>
                                    <TextBlock Text="Active" Foreground="White" 
                                              FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#9C27B0" Margin="5" Padding="20" CornerRadius="10">
                                <StackPanel>
                                    <TextBlock Text="Reports" Foreground="White" FontSize="14"/>
                                    <TextBlock Text="Generate" Foreground="White" 
                                              FontSize="32" FontWeight="Bold" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <!-- Quick Actions -->
                        <Border Background="#F5F5F5" Padding="20" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Generate Reports" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                                <WrapPanel>
                                    <Button Content="📊 Monthly Summary Report" Command="{Binding GenerateReportCommand}" 
                                           Background="#4CAF50" Foreground="White" Width="200"/>
                                    <Button Content="📈 Lecturer Claims Report" Command="{Binding GenerateReportCommand}" 
                                           Background="#2196F3" Foreground="White" Width="200"/>
                                    <Button Content="💰 Financial Report" Command="{Binding GenerateReportCommand}" 
                                           Background="#FF9800" Foreground="White" Width="200"/>
                                    <Button Content="📑 Export All Data" Command="{Binding ExportToExcelCommand}" 
                                           Background="#9C27B0" Foreground="White" Width="200"/>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
